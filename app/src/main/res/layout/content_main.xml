<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.jowe.highpointcoffee.ContentMainActivity">

    <ImageView
        android:id="@+id/high_point_image"
        android:src="@drawable/high_point_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.4"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="HIGH POINT COFFEE" />

    <TextView
        android:id="@+id/slogan_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_text_view"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="I Get It Daily At High Point" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_text_view"
        android:layout_centerHorizontal="true"
        android:padding="34dp"
        android:text="High Point is a warm and inviting little coffee house just on the corner of 7800 south and redwood road. Our shop has a great easy access drive thru, free Wi-Fi, and plenty of comfortable seating with charging stations good for everything from studying, business meetings, or get-togethers with friends.
"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s_kcoffee@comcast.net"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/phone_text_view"/>

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/address_text_view"
        android:text="(801) 878-4344 | (801) 878-4355"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:text="1735 7800 S, West Jordan, UT 84088, USA"
        android:textStyle="bold" />

</RelativeLayout>
